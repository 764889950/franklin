#!/usr/bin/make -f

%:
	dh $@ --with python2

export DEB_BUILD_MAINT_OPTIONS=hardening=-stackprotector

ARCH = $(shell dpkg-architecture -qDEB_HOST_ARCH)

override_dh_auto_build:
	dh_auto_build
	${MAKE} -C server/html
	ronn -r server/franklin.8.ronn
#ifeq (${ARCH}, armhf)
#	${MAKE} -C server/cdriver TARGET=bbb
#	mv server/cdriver/cdriver server/cdriver/cdriver.local
#	${MAKE} -C server/cdriver clean
#endif
	${MAKE} -C server/cdriver
	${MAKE} -C firmware TARGET=melzi
	${MAKE} -C firmware TARGET=ramps
	${MAKE} -C firmware TARGET=mega
	${MAKE} -C firmware TARGET=mini
	${MAKE} -C util

override_dh_auto_install:
	dh_auto_install
#ifeq (${ARCH}, armhf)
#	dh_install server/cdriver/cdriver.local /usr/lib/franklin/
#	dh_install server/cdriver/bbb_pru.bin /usr/lib/franklin/
#endif

override_dh_auto_clean:
	dh_auto_clean
	rm -f *.pyc *.pyo server/franklin.8
	rm -rf firmware/build-*
	$(MAKE) -C server/cdriver clean
	$(MAKE) -C util clean
