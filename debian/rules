#!/usr/bin/make -f

%:
	dh $@ --with python3

export DEB_BUILD_MAINT_OPTIONS=hardening=-stackprotector

ARCH = $(shell dpkg-architecture -qDEB_HOST_ARCH)

override_dh_auto_build:
	${MAKE} -C server/html
	ronn -r server/franklin.8.ronn
#ifeq (${ARCH}, armhf)
#	${MAKE} -C server/cdriver_src TARGET=bbb
#	mv server/cdriver/cdriver_src server/cdriver_src/cdriver.local
#	${MAKE} -C server/cdriver_src clean
#endif
	${MAKE} -C server/cdriver_src
	${MAKE} -C firmware TARGET=atmega1284p
	${MAKE} -C firmware TARGET=atmega2560
	${MAKE} -C firmware TARGET=atmega1280
	${MAKE} -C firmware TARGET=atmega328p
	${MAKE} -C util

override_dh_auto_install:
	dh_auto_install
#ifeq (${ARCH}, armhf)
#	dh_install server/cdriver_src/cdriver.local /usr/lib/franklin/
#	dh_install server/cdriver_src/bbb_pru.bin /usr/lib/franklin/
#endif

override_dh_auto_clean:
	dh_auto_clean
	rm -f *.pyc *.pyo server/franklin.8
	rm -rf firmware/build-*
	$(MAKE) -C server/cdriver_src clean
	$(MAKE) -C util clean
